//- Все примеси в этом файле должны начинаться c имени блока (header)

mixin header(mods)

  //- Принимает:
  //-   mods  {string} - список модификаторов
  //- Вызов:
        +header()
          p «Шапка»
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' header_' + modsList[i].trim();
      }
    }

  -
    const events = [
      {
        link: '#',
        text: 'Шеф-лайм'
      },
            {
        link: '#',
        text: 'Вакансии'
      },
      {
        link: '#',
        text: 'Вопрос-ответ'
      },
      {
        link: '#',
        text: 'Бонусная программа'
      },
    ]  
  header.header(class=allMods, role='banner')&attributes(attributes)      
      .header__top
        .container
          .header__top-inner
            
            .header-top-left
              a.header-top-left__item.header-top-left__item_big(href='#') 
                img.header-top-left__item-img(src='./img/phone-call.svg', width='14px', height='14px', alt='')
                | 7756
              a.header-top-left__item(href='#') 
                img.header-top-left__item-img(src='./img/mark.svg', width='14px', height='14px', alt='')
                | Зона доставки
              a.header-top-left__item(href='#')
                img.header-top-left__item-img(src='./img/clock.svg', width='14px', height='14px', alt='')
                | 17:00 - 17:45
            ul.header__top-nav
              each item in events
                li.header__top-nav-item
                  a.header__top-nav-link(href=item.link)!=item.text
      .header__bottom
        .container
          .header__bottom-inner
            .header__bottom-inner-left
              button.header__btn-catalog.main-btn.main-btn_big
                img(src='./img/search-btn.svg', alt='catalog',width='22', height='17' )
                | Каталог
              .burger-menu
                .burger-menu__item 
                .burger-menu__item 
                .burger-menu__item 
              input.header__search(type='text', placeholder='Купить молоко')
            a.header__bottom-nav-item.header__bottom-nav-item_sale(href='#')
                .header__bottom-nav-item-persent %
                | Скидки
            +logo('/', 'header__logo')
                img(src='./img/logo.svg', alt='Logo', width='107', height='71')
            .header__bottom-nav
              a.header__bottom-nav-item(href='#')
                svg
                  use(xlink:href='./img/lk.svg#svg')
                | Кабинет
              a.header__bottom-nav-item(href='#')
                svg
                  use(xlink:href='./img/hearth.svg#svg')
                | Избранное
              a.header__bottom-nav-item(href='#')
                svg
                  use(xlink:href='./img/cart.svg#svg')
                | Корзина
  +mobile-menu